@model List<EntityLayer.Concrete.Admin>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Kullanıcı Mail</th>
        <th>Yetki</th>
        <th>Durum</th>
        <th>Pasif Yap</th>
        <th>Yetkisini Değiştir</th>


    </tr>
    @foreach (var item in Model)
    {
<tr>
    <th>@item.AdminID</th>
    <td>@item.AdminUserName</td>
    <th>@item.AdminRole</th>
    <td>Aktif</td>
    <td><a href="/Authorization/DeleteAdmin/@item.AdminID" class="btn btn-danger">Pasif</td>
    <td><a href="/Authorization/EditAdmin/@item.AdminID" class="btn btn-warning">Yetkiyi Değiştir</td>


</tr>
    }
</table>
<a href="/Authorization/AddAdmin/" class="btn btn-info">Yeni Admin Tanımla</a>